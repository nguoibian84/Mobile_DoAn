<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFoodActivity">

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <TextView
            android:textSize="26dp"
            android:text="Thêm Món Ăn"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <ImageButton
        android:id="@+id/icon_back"
        android:background="@drawable/icon_back"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_below="@+id/layout_1"
        android:background="#E0E3E4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ImageButton
        android:id="@+id/image"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/txt_chooseImg"
        android:textSize="20dp"
        android:layout_below="@+id/image"
        android:text="@string/your_string_here"
        android:layout_marginStart="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/name"
        android:text="Tên món ăn"
        android:layout_below="@+id/txt_chooseImg"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txt_name"
        android:layout_below="@+id/name"
        android:hint="Tên món ăn"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gia"
        android:text="Giá"
        android:layout_below="@+id/txt_name"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txt_diachi"
        android:layout_below="@+id/gia"
        android:hint="Giá"
        android:textSize="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_them"
        android:text="Thêm"
        android:padding="10dp"
        android:textSize="25dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"/>

</RelativeLayout>