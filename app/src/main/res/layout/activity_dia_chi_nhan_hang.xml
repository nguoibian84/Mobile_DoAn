<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiaChiNhanHangActivity">

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <TextView
            android:textSize="26dp"
            android:text="Địa chỉ nhận hàng"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/icon_back"
        android:background="@drawable/icon_back"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_below="@+id/layout_1"
        android:background="#E0E3E4"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/txt_1"
            android:text="Địa điểm của tôi"
            android:textSize="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/diachinha"
        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/icon_home"
            android:src="@drawable/home_home"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/txt_nha"
            android:layout_toRightOf="@+id/icon_home"
            android:text="Nhà"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@+id/icon_home"
            android:text="Lưu địa chỉ"
            android:layout_below="@+id/txt_nha"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_toRightOf="@+id/txt_nha"
            android:layout_marginTop="30dp"
            android:layout_marginStart="280dp"
            android:src="@drawable/icon_diachi"
            android:layout_width="15dp"
            android:layout_height="25dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/diachinha"
        android:background="#E0E3E4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/diachicongty"
        android:layout_below="@+id/diachinha"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/icon_congty"
            android:src="@drawable/icon_congty"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/txt_congty"
            android:layout_toRightOf="@+id/icon_congty"
            android:text="Công ty"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@+id/icon_congty"
            android:text="Lưu địa chỉ"
            android:layout_below="@+id/txt_congty"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_toRightOf="@+id/txt_congty"
            android:layout_marginTop="30dp"
            android:layout_marginStart="255dp"
            android:src="@drawable/icon_diachi"
            android:layout_width="15dp"
            android:layout_height="25dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/diachinha"
        android:background="#E0E3E4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_below="@+id/diachicongty"
        android:background="#E0E3E4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</RelativeLayout>