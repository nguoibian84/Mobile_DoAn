<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoiMatKhauActivity">

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <TextView
            android:textSize="26dp"
            android:text="Thay đổi mật khẩu"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageButton
        android:id="@+id/icon_back"
        android:background="@drawable/iconx"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <RelativeLayout
        android:id="@+id/line1"
        android:layout_below="@+id/layout_1"
        android:background="#E0E3E4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/layout_2"
        android:layout_below="@+id/layout_1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ten"
            android:text="Nhập mật khẩu mới"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txt_mk"
            android:layout_below="@+id/ten"
            android:hint="Nhập mật khẩu mới"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textPassword"
            android:maxLength="10"
            android:maxLines="1"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/icon_showpass"
            android:layout_marginTop="50dp"
            android:layout_marginStart="340dp"
            android:background="@drawable/icon_eyes"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/diachi"
            android:layout_below="@+id/txt_mk"
            android:text="Xác nhận mật khẩu"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/txt_xacnhan"
            android:layout_below="@+id/diachi"
            android:hint="Xác nhận mật khẩu"
            android:layout_marginEnd="20dp"
            android:inputType="textPassword"
            android:maxLength="10"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/icon_showxacnhan"
            android:layout_marginTop="130dp"
            android:layout_marginStart="340dp"
            android:background="@drawable/icon_eyes"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </RelativeLayout>
    <Button
        android:id="@+id/btn_luu"
        android:layout_below="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="350dp"
        android:textSize="20dp"
        android:text="Lưu"
        android:padding="15dp"
        android:layout_marginEnd="40dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>