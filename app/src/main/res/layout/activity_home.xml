<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/red_search_menu">

            <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="30dp"
                android:background="@drawable/while_fill_rounded_color"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>
    <SearchView
        android:id="@+id/search"
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:iconifiedByDefault="false"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp">
    </SearchView>

    <ImageButton
        android:id="@+id/icon_account"
        android:background="@drawable/menu"
        android:layout_toRightOf="@+id/search"
        android:layout_marginTop="7dp"
        android:layout_marginStart="20dp"
        android:layout_width="50dp"
        android:layout_height="40dp"/>

    <ImageButton
        android:id="@+id/icon_khampha"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/search"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/khampha_icon" />

    <TextView
        android:id="@+id/txt_khampha"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/icon_khampha"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="5dp"
        android:text="Khám phá"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/icon_giaohang"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/search"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:src="@drawable/giaohang_icon" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/icon_giaohang"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="247dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="70dp"
        android:text="Giao hàng"
        android:textSize="20dp" />
    <ImageView
        android:id="@+id/line_hone"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_khampha"
        android:background="@drawable/line_home"/>
    <TextView
        android:id="@+id/txt_menutangdekhang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_hone"
        android:text="Menu tăng đề kháng"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textStyle="normal|bold"
        />
    <TextView
        android:id="@+id/txt_anngonlaysucphongdich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_menutangdekhang"
        android:text="Ăn ngon lấy sức phòng dịch"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_drink"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/txt_anngonlaysucphongdich"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/monanthinhhanh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rec_drink"
        android:text="Món ăn thịnh hành"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textStyle="normal|bold"
        android:layout_marginTop="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_thinhhanh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/monanthinhhanh"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>